@model CmsShoppingCart.Models.ViewModels.Pages.PageVM

@{
    ViewBag.Title = "Delete Page";
}

<h2>Delete Page</h2>

<h3>Are you sure you want to delete this page?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Slug
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slug)
        </dd>

        <dt>
            Body
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
            SideBar
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HasSidebar)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete Page" class="btn btn-default" /> |
            @Html.ActionLink("Back to Pages", "Index")
        </div>
    }
</div>
